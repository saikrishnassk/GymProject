<script>
    $(document).ready(function () {

        $('#form_time').timepicker({
            timeFormat: 'h:mm p',
            interval: 15,
            minTime: '10',
            maxTime: '6:00pm',
            // defaultTime: '11',
            startTime: '10:00',
            dynamic: false,
            dropdown: true,
            listWidth: 1,
            scrollbar: false
        });
        $('.navbar-burger').click(function () {

            $('.navbar-burger').toggleClass("is-active");
            $('.navbar-menu').toggleClass("is-active");
        });

        $('#form_date').toArray().forEach(function (field) {

            new Cleave(field, {
                date: true,
                delimiter: '-',
                datePattern: ['m', 'd', 'Y'],
            })
        });
        $('input[id*=form_date]').toArray().forEach(function (field) {

            new Pikaday({
                field: field,
                trigger: $('#' + field.id + '_btn')[0],
                format: 'MM-DD-YYYY',
            })
        });
        $('#submit-btn, #submit-btn-bar').click(function(event){
            event.preventDefault();
            let valid = true;
            let client_name = $('#client_name').val();
            let fee_collected = $('#fee_collected').val();
            let name = $('#name').val();

            client_name = client_name.trim();
            fee_collected = fee_collected.trim();
            name = name.trim();
            if (  name === '' ) {
                alert("Please select a Name.");
                valid = false;
                $(this).focus();
                return false;
            }
            if ( client_name === "" ) {

                alert("Please enter client name.");
                valid = false;
                $(this).focus();
                return false;
            }
            if ( fee_collected === "" ) {

                alert("Please enter fee collected");
                valid = false;
                $(this).focus();
                return false;
            }

            if ( valid ){
                console.log("HIII");
                $('.modal').css('display', 'flex')
                $('.delete').click(()=>{
                    $('.modal').css('display', 'none');
                    return false;
                })
                $('#confirm').click(function () {
                    console.log("submitting");
                    document.getElementById('employee_consent').submit();
                });

            }
            return valid;
        });
    });

</script>

