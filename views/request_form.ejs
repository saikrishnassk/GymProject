<section>
    <div class="container">
        <div class="hpanel">
            <div class="panel-body text-center h-200">
                <h1 style="margin-top: 1rem;"><span class="font-extra-bold no-margins text-success" style="float: left;"> Request Info</span></h1>
            </div>
        </div>
        <form action="request_form" method="POST" id="request_form" style="margin-top: 1rem">
            <div class="field-wrap">

                <div class="field">
                    <label class="label is-small">First Name</label>
                    <div class="control has-icons-left">
                        <input id="first_name" class="input is-info is-small" type="text" placeholder="First Name" name="FirstName" >
                        <span class="icon is-left"><i class="far fa-circle"></i></span>
                    </div>
                </div>
                <div class="field" >
                    <label class="label is-small">Last Name</label>
                    <div class="control has-icons-left">
                        <input id="last_name" class="input is-info is-small" type="text" placeholder="Last Name" name="LastName">
                        <span class="icon is-left"><i class="far fa-circle"></i></span>
                    </div>
                </div>
                <div class="field">
                    <label class="label is-small">Email</label>
                    <div class="control has-icons-left">
                        <input id="email" class="input is-info is-small" type="text" placeholder="Email" name="Email" >
                        <span class="icon is-left"><i class="far fa-circle"></i></span>
                    </div>
                </div>
                <div class="field">
                    <label class="label is-small">Phone</label>
                    <div class="control has-icons-left">
                        <input id="phone" class="input is-info is-small" type="number" placeholder="Phone" name="Phone" >
                        <span class="icon is-left">+1</span>
                    </div>
                </div>
                <div class="field">
                    <label class="label is-small">Date of Appointment</label>
                    <div class="control has-icons-left">
                        <input id="form_date" class="input is-info is-small" placeholder="MM-DD-YYYY" type="text" name="date" >
                        <span class="icon is-left"><i class="far fa-calendar-alt"></i></span>
                    </div>
                </div>
                <div class="field">
                    <label class="label is-small">Time of Appointment</label>
                    <div class="control has-icons-left">
                        <input id="form_time" class="input is-info is-small" placeholder="HH:MM" type="text" name="time">
                        <span class="icon is-left"><i class="far fa-clock"></i></span>
                    </div>
                </div>
                <div class="field">
                    <label class="label is-small">Select Service</label>
                    <div class="control has-icons-left">
                        <div class="select is-info is-small is-fullwidth">
                            <select id="description" name="Description">
                                <option value="">...</option>
                                <option value="Bootcamp">Bootcamp ($15 per session)</option>
                                <option value="Personal Session">Personal Session</option>
                            </select>
                        </div>
                        <span class="icon is-small is-left"><i class="fas fa-sort-alpha-down"></i></span>

<!--                        <textarea id="description" class="input is-info is-small"  rows="2" name="Description"></textarea>-->
<!--                        <span class="icon is-left"><i class="far fa-sticky-note"></i></span>-->
                    </div>
