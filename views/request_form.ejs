<script>
    $(document).ready(function () {

        $('#form_time').timepicker({
            timeFormat: 'h:mm p',
            interval: 15,
            minTime: '10',
            maxTime: '6:00pm',
            // defaultTime: '11',
            startTime: '10:00',
            dynamic: false,
            dropdown: true,
            listWidth: 1,
            scrollbar: false
        });
        $('.navbar-burger').click(function () {

            $('.navbar-burger').toggleClass("is-active");
            $('.navbar-menu').toggleClass("is-active");
        });

        $('#form_date').toArray().forEach(function (field) {

            new Cleave(field, {
                date: true,
                delimiter: '-',
                datePattern: ['m', 'd', 'Y'],
            })
        });
        $('input[id*=form_date]').toArray().forEach(function (field) {

            new Pikaday({
                field: field,
                trigger: $('#' + field.id + '_btn')[0],
                format: 'MM-DD-YYYY',
            })
        });
        $('#submit-btn, #submit-btn-bar').click(function(event){
            event.preventDefault();
            let valid = true;
            let first_name = $('#first_name').val();
            let last_name = $('#last_name').val();
            let email = $('#email').val();
            let phone = $('#phone').val();
            let description = $('#description').val();
            let payment_mode = $('#payment_mode').val();
            let comment = $('#comment').val().trim();
            let phoneno = /^\d{10}$/;
            var phone_matching = phone.match(phoneno);

            var tim = /((1[0-2]|0?[1-9]):([0-5][0-9]) ?([AaPp][Mm]))/;

            var q1_ques = $('input[name="q1_yes"]:checked').val();
            var q2_ques = $('input[name="q2_yes"]:checked').val();
            var q3_ques = $('input[name="q3_yes"]:checked').val();
            first_name = first_name.trim();
            last_name = last_name.trim();
            description = description.trim();

            var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            var out_email =  re.test(email);

            if(q1_ques === undefined){
                alert("Please Answer the first question");
                valid = false;
                $(this).focus();
                return false;
            }
            if(q2_ques === undefined){
                alert("Please Answer the second question");
                valid = false;
                $(this).focus();
                return false;
            }
            if(q3_ques === undefined){
                alert("Please Answer the third question");
                valid = false;
                $(this).focus();
                return false;
            }
            if ( first_name === "" ) {

                alert("Please enter first name.");
                valid = false;
                $(this).focus();
                return false;
            }
            if ( last_name === "" ) {

                alert("Please enter last name.");
                valid = false;
                $(this).focus();
                return false;
            }
            if (  out_email === false ) {
                alert("Please enter valid email.");
                valid = false;
                $(this).focus();
                return false;
            }
            if (  phone_matching === null ) {
                alert("Please enter valid Phone number.");
                valid = false;
                $(this).focus();
                return false;
            }

            if (  description === '' ) {
                alert("Please select a service.");
                valid = false;
                $(this).focus();
                return false;
            }
            if (  payment_mode === '' ) {
                alert("Please select a payment mode.");
                valid = false;
                $(this).focus();
                return false;
            }
            if( (payment_mode === 'Cash' || payment_mode === 'Pre-paid') && comment === '' ){
                alert("Please enter comment");
                valid = false;
                $(this).focus();
                return false;
            }

            if ( valid ){

                $('.modal').css('display', 'flex')
                $('.delete').click(()=>{
                    $('.modal').css('display', 'none');
                    return false;
                })
                $('#confirm').click(function () {
                    console.log("submitting");
                    document.getElementById('request_form').submit();
                });

            }
            return valid;
        });
    });

</script>

